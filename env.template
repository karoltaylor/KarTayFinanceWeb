# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Your Apps
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Backend API Configuration (REQUIRED)
# This must be set to your backend API URL
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
VITE_API_BASE_URL=http://localhost:8000

# Logging Configuration
# Enable/disable centralized logging
VITE_LOGGING_ENABLED=true
# Log level: DEBUG, INFO, WARN, ERROR
VITE_LOGGING_LEVEL=DEBUG
# Number of logs to batch before sending
VITE_LOGGING_BATCH_SIZE=10
# Interval (ms) to send batched logs
VITE_LOGGING_BATCH_INTERVAL=5000

# Authorization Configuration
# Enable/disable email whitelist authorization
# Set to false to allow all authenticated users
VITE_AUTHORIZATION_ENABLED=true

